{
  "version": 2,
  "builds": [
    {
      "src": "wbe/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "wbe/wsgi.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py migrate && python manage.py createsuperuser_if_none"
}
